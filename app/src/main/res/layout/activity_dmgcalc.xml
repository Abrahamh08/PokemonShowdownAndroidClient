<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dmgcalc_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/dmgcalc_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pokedex"
                android:contentDescription="@string/dmgcalc_switch"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/dmgcalc_attacker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/border_frame"
                android:textSize="16sp"
                android:gravity="bottom"
                android:layout_toLeftOf="@id/dmgcalc_switch"/>

            <TextView
                android:id="@+id/dmgcalc_defender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/border_frame"
                android:textSize="16sp"
                android:gravity="bottom"
                android:layout_toRightOf="@id/dmgcalc_switch"/>
            
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/dmgcalc_field_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- The navigation drawer -->
    <!-- should not be larger than 320 to show content -->
    <ListView android:id="@+id/layout_dmgcalc_left_drawer"
              android:layout_width="180dp"
              android:layout_height="match_parent"
              android:layout_gravity="start"
              android:choiceMode="singleChoice"
              android:divider="@android:color/transparent"
              android:dividerHeight="0dp"
              android:background="#111" />

</android.support.v4.widget.DrawerLayout>