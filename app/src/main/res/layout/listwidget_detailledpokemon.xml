<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/teambuilder_pokemonInfo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/teambuilder_pokemonNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/teambuilder_pokemonIcon"
            android:layout_margin="4dp"
            android:background="@drawable/editable_frame"
            android:ellipsize="marquee"
            android:gravity="center"
            android:lines="1"
            android:padding="1dp" />

        <ImageView
            android:id="@id/teambuilder_pokemonIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/teambuilder_pokemonNickName" />

        <TextView
            android:id="@+id/teambuilder_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@id/teambuilder_pokemonIcon"
            android:layout_below="@id/teambuilder_pokemonIcon"
            android:layout_margin="4dp"
            android:background="@drawable/editable_frame"
            android:ellipsize="marquee"
            android:gravity="center"
            android:lines="1"
            android:padding="1dp" />
    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/teambuilder_pokemonInfo"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="4">

        <RelativeLayout
            android:id="@+id/move1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/editable_frame">

            <TextView
                android:id="@+id/move1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center" />


            <TextView
                android:id="@+id/move1_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="1dp"
                android:layout_alignTop="@id/move1_type" />


            <ImageView
                android:id="@+id/move1_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/move1_pp"
                android:layout_margin="1dp"
                android:contentDescription="@string/move_type" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/move2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"

            android:layout_weight="1"

            android:background="@drawable/editable_frame">


            <TextView
                android:id="@+id/move2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center" />


            <TextView
                android:id="@+id/move2_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="1dp"
                android:layout_alignTop="@id/move2_type" />


            <ImageView
                android:id="@+id/move2_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/move2_pp"
                android:layout_margin="1dp"
                android:contentDescription="@string/move_type" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/move3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"

            android:layout_weight="1"

            android:background="@drawable/editable_frame">

            <TextView
                android:id="@+id/move3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center" />


            <TextView
                android:id="@+id/move3_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="1dp"
                android:layout_alignTop="@id/move3_type" />


            <ImageView
                android:id="@+id/move3_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/move3_pp"
                android:layout_margin="1dp"
                android:contentDescription="@string/move_type" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/move4"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"

            android:layout_weight="1"
            android:background="@drawable/editable_frame">

            <TextView
                android:id="@+id/move4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center" />


            <TextView
                android:id="@+id/move4_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="1dp"
                android:layout_alignTop="@id/move4_type" />


            <ImageView
                android:id="@+id/move4_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/move4_pp"
                android:layout_margin="1dp"
                android:contentDescription="@string/move_type" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>